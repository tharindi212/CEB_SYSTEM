RewriteEngine On
RewriteBase /quotation_system/

# Prevent directory browsing
Options -Indexes

# Protect config files
<FilesMatch "^(database|email)\.php$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Error pages
ErrorDocument 404 /quotation_system/login.php
ErrorDocument 403 /quotation_system/login.php

# PHP Settings
php_value upload_max_filesize 10M
php_value post_max_size 10M
php_value max_execution_time 300
php_value max_input_time 300
